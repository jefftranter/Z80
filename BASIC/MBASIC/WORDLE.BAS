370 I=1
380 RESTORE 90
390 READ S$
400 IF S$="" THEN 430
410 W$(I)=LEFT$(S$,5):I=I+1
420 IF I<=200 THEN 390
430 WC=I-1

440 R=INT(RND(1)*WC)+1
450 SE$=W$(R)

460 TR=0:MT=6

480 IF TR>=MT THEN 940
490 TR=TR+1
500 PRINT:PRINT "GUESS #";TR;"OF";MT
510 INPUT "ENTER 5-LETTER WORD: ";X$
520 GOSUB 2000
530 IF LEN(X$)<>5 THEN PRINT "NEED 5 LETTERS.":TR=TR-1:GOTO 480

590 G$(TR)=X$

600 FOR K=1 TO 5:M$(K)="-":NEXT K
620 FOR K=1 TO 5
630 S$(K)=MID$(SE$,K,1)
640 GL$(K)=MID$(X$,K,1)
650 NEXT K

660 FOR K=1 TO 5
670 IF GL$(K)=S$(K) THEN M$(K)="G":GL$(K)="*":S$(K)="#"
680 NEXT K

700 FOR K=1 TO 26:CT(K)=0:NEXT K
710 FOR K=1 TO 5
720 IF S$(K)<>"#" THEN IX=ASC(S$(K))-64:CT(IX)=CT(IX)+1
730 NEXT K

740 FOR K=1 TO 5
750 IF M$(K)<>"G" THEN CH$=GL$(K):IX=ASC(CH$)-64
760 IF IX>=1 AND IX<=26 THEN IF CT(IX)>0 THEN M$(K)="Y":CT(IX)=CT(IX)-1
770 NEXT K

780 PRINT:PRINT "GUESS: ";X$
790 PRINT "MARK : ";
800 FOR K=1 TO 5:PRINT M$(K);:NEXT K:PRINT

810 WI=1
820 FOR K=1 TO 5:IF M$(K)<>"G" THEN WI=0
830 NEXT K
840 IF WI=1 THEN PRINT "YOU WON IN";TR;"TRIES! WORD=";SE$:GOTO 970

850 GOTO 480

940 PRINT:PRINT "SORRY - OUT OF GUESSES."
950 PRINT "WORD WAS: ";SE$

